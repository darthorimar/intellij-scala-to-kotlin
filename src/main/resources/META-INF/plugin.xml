<?xml version="1.0" encoding="iso-8859-1"?>

<idea-plugin>
    <id>darthorimar.scalaToKotlin</id>
    <name>Scala to Kotlin conveter</name>
    <version>0.1</version>
    <vendor url="https://github.com/darthorimar"/>

    <description><![CDATA[
      Scala to Kotlin conveter
    ]]></description>

    <depends>org.intellij.scala</depends>
    <depends>org.jetbrains.kotlin</depends>
    <idea-version since-build="182.0"/>

    <actions>
        <action id="Scala.ConvertScalaToKotlin"
                class="darthorimar.scalaToKotlinConverter.ideaInteraction.ConvertScalaToKotlinAction"
                text="Convert Scala to Kotlin" description="Convert Scala to Kotlin">
            <add-to-group group-id="RefactoringMenu" anchor="last"/>
            <add-to-group group-id="EditorTabPopupMenu" anchor="last"/>
            <add-to-group group-id="ProjectViewPopupMenu" anchor="last"/>
        </action>
    </actions>

    <extensions defaultExtensionNs="com.intellij">
        <copyPastePostProcessor
                implementation="darthorimar.scalaToKotlinConverter.ideaInteraction.ConvertOnCopyPastPostProcessor"/>
    </extensions>


</idea-plugin>